<%= form_with(model: user, local: true, html: { class: "w-full max-w-md" }) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div>
      <%= form.hidden_field :organization_id, value: current_user.organization.id %>
    </div>
  </div>
  <div>
    <div>
      <%= form.label :email, class: 'text-sm text-caption-light font-medium uppercase' %>
    </div>
    <div>
      <%= form.text_field :email, class: 'input mb-2' %>
    </div>
  </div>
  <div>
    <div>
      <%= form.label :password, class: 'text-sm text-caption-light font-medium uppercase' %>
    </div>
    <div>
      <%= form.password_field :password, class: 'input mb-2' %>
    </div>
  </div>
  <div>
    <div>
      <%= form.label :role, class: 'text-sm text-caption-light font-medium uppercase' %>
    </div>
    <div>
      <%= form.select(:role, User.roles.keys, {}, class: "input mb-2") %>
    </div>
  </div>
  <div>
    <div class="control">
      <%= form.submit('Submit', class: 'bg-primary-dark hover:bg-primary text-white font-bold py-2 px-4 rounded inline-flex items-center mt-4') %>
    </div>
  </div>
<% end %>
